<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.NewReportActivity">

    <Button
            android:text="Сформировать отчет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/report"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/job_type"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:id="@+id/cardView2" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/name" android:hint="ФИО" android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:id="@+id/cardView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|numberDecimal"
                android:ems="10"
                android:id="@+id/id" android:hint="ID" android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/job_type"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Начать сессию"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Север"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/north" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/report"
            android:background="#3F51C5" android:textColor="#FFFFFF"/>
    <Button
            android:text="ЮГ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/south" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/report"
            android:background="#F44336" android:textColor="#FFFFFF"/>
    <TextView
            android:text="Север"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/district" app:layout_constraintStart_toEndOf="@+id/north"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/south"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/south" app:layout_constraintTop_toTopOf="@+id/south"
            android:textColor="#000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>